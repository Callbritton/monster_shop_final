<h1>Edit <%= @discount.name %></h1>
<%= form_tag "/merchant/discounts/#{@discount.id}", method: :patch  do %>
  <%= label_tag :name %>
  <%= text_field_tag :name, @discount.name %>
<br>
  <%= label_tag :percent %>
  <%= number_field_tag :percent, @discount.percent%>
<br>
  <%= label_tag :minimum_quantity %>
  <%= number_field_tag :minimum_quantity, @discount.minimum_quantity %>
<br>
  <%= submit_tag "Edit Discount" %>
<% end %>
