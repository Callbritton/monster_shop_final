<h2>Create a New Discount:</h2>
  <%= form_for([:merchant, @discount]) do |f| %>
    <%= f.label :name %>
    <%= f.number_field :name %>
    <br>
    <%= f.label :percent %>
    <%= f.number_field :percent %>
    <br>
    <%= f.label :minimum_quantity %>
    <%= f.number_field :minimum_quantity %>
    <br>
    <%= f.submit %>
  <% end %>
